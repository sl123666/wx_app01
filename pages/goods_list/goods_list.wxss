/* pages/goods_list/goods_list.wxss */
.yg_goods_list{
	width: 100vw;
	height: 100vh;
}
.goods_list{
	width: 100%;
}
.goods_list .goods{
	width: 100%;
	height: 300rpx;
	border-bottom: 1rpx solid #999;
	display: flex;
	align-items: center;
}
.goods_list .goods .image{
	width: 40%;
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
}
.goods_list .goods .image image{
	width: 240rpx;
}
.goods_list .detail{
	width: 60%;
	height: 200rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.goods_list .detail .price{
	color: #eb4450;
}