/* pages/goods_detail/goods_detail.wxss */
.yg_detail{
	padding-bottom: 100rpx;
}
.yg_detail swiper{
	height: 450rpx;
	text-align: center;
}
.yg_detail swiper image{
	width: 450rpx;
}
.price{
	color: #ff2d4a;
	font-weight: bold;
}
.goods{
	display: flex;
	
}
.goods_name{
	flex: 5;
	padding: 0 20rpx;
	border-right: 1rpx solid #333;
	margin: 10rpx 0;
	overflow : hidden;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.shoucang{
	flex: 1;
	padding: 0 20rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.pic_word{
	color: #ff2d4a;
	font-weight: bold;
	padding: 10rpx 0;
	border-top: 10rpx solid #ddd;
	border-bottom: 10rpx solid #ddd;
}
.bottom_list{
	width: 100%;
	position: fixed;
	bottom: 0;
	left: 0;
	height: 100rpx;
	border-top: 1rpx solid #ddd;
	background: #fff;
	display: flex;
	align-items: center;
}
.bottom_list .kefu{
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 0 10rpx;
}
.bottom_list .add{
	background-color: coral;
	height: 100%;
	line-height: 100rpx;
	padding: 0 20rpx;
	color: #fff;
	font-weight: bold;
}
.bottom_list .buy{
	flex: 1;
	background-color: #ff2d4a;
	height: 100%;
	line-height: 100rpx;
	padding: 0 20rpx;
	color: #fff;
	font-weight: bold;
	text-align: center;
}